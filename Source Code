from tkinter import *
root = Tk()
root.title("BMI Calculator")
root.iconbitmap('c:/BMI app/favicon.ico')
root.geometry('300x300')

# Varialbes
height_data = DoubleVar()
weight_data = DoubleVar() 

# inputs
height = Entry(root,width=20,textvariable=height_data)
weight = Entry(root,width=20,textvariable= weight_data)

# Function
def bmi():
    # Calculate BMI using height and weight data
    # Convert weight to kilograms (1 pound = 0.453592 kilograms)
    weight_kg = weight_data.get() * 0.453592
    
    # Calculate BMI (BMI = weight (kg) / (height (m) * height (m)))
    height_m = height_data.get()  # height is already in meters
    result = round(weight_kg / (height_m ** 2),1)
    
    # Update result label with the calculated BMI
    result_label.config(text='Your BMI is ' + str(result))

# labels
heightlabel = Label(root,text="height here M:")
weightlabel = Label(root,text="weight here Lbs:")
result_label = Label(root)

# buttons
bmi_result = Button(root,width=20,bg='Dark Gray',text='Result',command=bmi)

# positions
height.grid(row=0,column=1,padx=10,pady=10,)
weight.grid(row=1,column=1,padx=10,pady=10,)
heightlabel.grid(row=0,column=0)
weightlabel.grid(row=1,column=0)
bmi_result.grid(row=3,column=1,pady=10)
result_label.grid(row=4,column=1)
